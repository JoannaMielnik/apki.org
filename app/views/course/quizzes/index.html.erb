<p id="notice"><%= notice %></p>

<h1>Listing Course Quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_quizzes.each do |course_quiz| %>
      <tr>
        <td><%= course_quiz.data %></td>
        <td><%= link_to 'Show', course_quiz %></td>
        <td><%= link_to 'Edit', edit_course_quiz_path(course_quiz) %></td>
        <td><%= link_to 'Destroy', course_quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

