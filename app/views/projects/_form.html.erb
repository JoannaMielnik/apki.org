<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: 'Nazwa projektu:' %>
    <%= f.input :github, :collection => @repositories, :label_method => :name, :value_method => :full_name, :label => 'Nazwa repozytorium', :include_blank => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
