<h2 class="text-center mrg20t" style="margin-bottom:50px;margin-bottom:60px">Aktualno≈õci</h2>


<ul class="cbp_tmtimeline mrg20b">
    <%- @news.each do |single| -%>
    <li>
        <time class="cbp_tmtime" datetime=""><span><%= single.created_at.strftime('%F') -%></span> <span><%= single.created_at.strftime('%T') -%></span></time>
        <div class="cbp_tmicon cbp_tmicon-text"></div>
        <div class="cbp_tmlabel">
            <h2><%= link_to single.title, view_news_path(single) -%><br><small>Autor: <a href="<%= url_for profile_view_path(single.user) -%>"><%= single.user.nickname -%></a></small></h2>
            <%- if single.educator_news -%>
              <%= raw parse_markdown(single.content)-%>
            <%- else -%>
              <%= raw single.content -%>
            <%- end -%>
        </div>
    </li>
    <%- end -%>
</ul>
<%= paginate @news -%>