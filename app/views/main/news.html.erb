<h2 class="text-center mrg20t" style="margin-bottom:50px;margin-bottom:60px">Aktualno≈õci</h2>


<ul class="cbp_tmtimeline mrg20b news-timeline">
    <%- @news.each do |single| -%>
    <li>
        <time class="cbp_tmtime" datetime=""><span><a href="<%= url_for profile_view_path(single.user) -%>">Autor: <%= single.user.nickname -%></a></span><span><small><%= single.created_at.strftime('%F') -%></small></span></time>
        <div class="cbp_tmicon"><img style="width:40px;height:40px" class="circular" src="<%= single.user.image %>"></div>
        <div class="cbp_tmlabel">
            <h2><%= link_to single.title, view_news_path(single) -%></h2>
            <%- if single.educator_news -%>
              <%= raw parse_markdown(single.content)-%>
            <%- else -%>
              <%= raw single.content -%>
            <%- end -%>
        </div>
    </li>
    <%- end -%>
</ul>
<%= paginate @news -%>