<form ng-app="aPanelListApp" ng-controller="myCtrl" ng-init="initAPanelList()">
    <div id="courseLoading" class="text-center col-md-10 col-md-offset-1" style="margin-top:60px" ng-hide="inited">
        <i class="fa fa-cog fa-spin color-primary" style="font-size:48px"></i>
    </div>
    <div ng-hide="!inited">
        <h2>Lista wszystkich kursów</h2><br>

        <input type="button" class="btn btn-secondary" ng-click="addNewCourse()" value="Dodaj nowy kurs"><br>
        <div ng-repeat="crs in courses">
            <div class="clearfix"></div>
            <div class="caption">
                <a href="/admin_panel?id={{ crs.id }}">{{ crs.data.title }} ({{ crs.id }})</a><br>
                <small><span ng-if="crs.data.finished" class="label-success">Opublikowano</span><span ng-if="!crs.data.finished" class="label-warning">W trakcie opracowania</span></small>

                <div style="float:right"><input type="button" class="btn btn-danger" ng-click="removeCourse(crs)" value="Usuń"> <a href="/admin_panel?id={{ crs.id }}" class="btn btn-primary" >Edytuj</a> </div>
            </div>
        </div>
    </div>
</form>