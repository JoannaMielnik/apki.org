<h2 class="text-center mrg20t" style="margin-bottom:50px;margin-bottom:60px">Wszystkie artyku≈Çy</h2>

<div class="table-responsive">
    <table class="no-border hover list">
        <tbody class="no-border-y">
        <%- @articles.each do |single| -%>
        <tr class="items">
            <td><img src="<%= single.user.image -%>" style="width:24px;height:24px;vertical-align:middle"> <%= link_to single.title, view_article_path(single) -%></td>
        </tr>
        <%- end -%>
        </tbody>
    </table>
</div>
        
<%= paginate @articles -%>