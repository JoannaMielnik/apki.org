<header class="margin-bottom-xs">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header" style="width:191px !important">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Nawigacja</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="betaInfo">BETA</span>
                <a class="navbar-brand" href="http://apki.org"><%= image_tag 'logoc.png', alt: 'Apki.org' %></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                    <li <%- if current_page?(news_path) -%>class="active"<%- end -%>>
                    <a href="<%= news_path -%>">Aktualności<%- if current_page?(news_path) -%> <span class="sr-only">(aktywny)</span><%- end -%></a>
                    </li>
                    <li>
                        <a href="/#courseListAnchor" class="smooth-scroll">Kursy</a>
                    </li>
                    <li <%- if current_page?(projects_path) -%>class="active"<%- end -%>>
                    <a href="<%= projects_path -%>">Projekty<%- if current_page?(projects_path) -%> <span class="sr-only">(aktywny)</span><%- end -%></a>
                    </li>
                    <li <%- if current_page?('/static/dydaktyka') -%>class="active"<%- end -%>>
                    <a href="/static/dydaktyka">Nauka<%- if current_page?('/static/dydaktyka') -%> <span class="sr-only">(aktywny)</span><%- end -%></a>
                    </li>
                    <li><a href="http://forum.apki.org/" target="_blank">Forum</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="https://github.com/media3-0/apki.org/issues/new" target="_blank">Zgłoś błąd</a>
                    </li>
                    <%- if current_user -%>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle user-profile" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span id="loginImage" data-src="<%= current_user.image -%>" style="margin-right: 5px"></span>
                            <%= current_user.nickname -%>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to 'Mój profil', user_edit_profile_path -%></li>
                            <li><%= link_to 'Moje projekty', projects_mine_path -%></li>
                            <%- if current_user.account_type == :teacher -%>
                            <li role="separator" class="divider"></li>
                            <li><%= link_to 'Profil szkoły', school_edit_profile_path -%></li>
                            <li><%= link_to 'Lista moich newsów', school_educator_news_list_path -%></li>
                            <li><%= link_to 'Nowy news', school_educator_news_path -%></li>
                            <%- end -%>
                            <li role="separator" class="divider"></li>
                            <li><%= link_to 'Wyloguj', signout_path -%></li>

                        </ul>
                    </li>
                    <%- else -%>
                    <li><a href="/auth/github">Zaloguj się</a></li>
                    <%- end -%>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->


    </nav>
</header>
